@using Task.Web.Models
@model List<StoryModel>
@{
    ViewBag.Title = "My stories";
}

<h2>My stories</h2>
<div class="create-div">
    @Html.ActionLink("Create new story", "CreateNewStory", "Story", new { Area = "" }, new { @class = "btn btn-primary" })
</div>
<br>
<table class="card-view-table">
    @{
        if (Model.Count > 0)
        {
            for (int i = 0; i < Model.Count; i += 3)
            {
                <tr>
                    @for (int j = 0; j < 3; j++)
                    {
                        if (i + j < Model.Count)
                        {
                            <td>

                                <div class="card card-block text-center story-body">
                                    <h3 class="card-title">@Model[i + j].Title</h3>
                                    <a class="btn btn-primary story" href="~/Story/Story/@Model[i+j].Id">View</a>
                                    <a class="btn btn-info story" href="~/Story/EditStory/@Model[i+j].Id">Edit</a>
                                </div>
                            </td>
                        }
                    }
                </tr>
            }
        }
    }
</table>
