@using Task.Web.Models
@model StoryDetailsModel
@{
    ViewBag.Title = "Story";
}

<div class="row" style="margin-top:20px;">

    <div class="list-group  col-lg-6" style="margin-bottom:20px;">
        <a class="list-group-item active">
            <h4 class="list-group-item-heading">@Model.Title</h4>

        </a>
        <a class="list-group-item ">

            <p class="list-group-item-text">@Model.Description</p>
            <p class="list-group-item-text">@Model.Content</p>
        </a>
    </div>

</div>
@{
    if (Model.Groups.Count > 0)
    {
        string groups ="";
        
    <div class="row">
        <div class="list-group col-lg-6">
            <a href="#" class="list-group-item disabled">Story shared for groups</a>
            @for (int i = 0; i < Model.Groups.Count; i++)
            {
                groups += " " + Model.Groups[i].Name;
            }
            <a class="list-group-item">@groups</a>
        </div>
    </div>
    }
}

